        // Enhanced global variables for Sheet integration
        let allSheetData = []; // V≈°echna data ze Sheetu (historick√© + pl√°novan√©)
        let historicalData = []; // Jen historick√© akce s prodejn√≠mi daty
        let plannedEvents = []; // Pl√°novan√© akce ze Sheetu
        let localSavedEvents = []; // Lok√°lnƒõ ulo≈æen√© predikce
        let lastPrediction = null;
        let currentDate = new Date();
        let calendarView = 'month';
        let selectedEventId = null;

        // API keys and constants
        const WEATHER_API_KEY = 'c2fb0e86623880dc86162892b0fd9c95';
        const SHEET_ID = '1LclCz9hb0hlb1D92OyVqk6Cbam7PRK6KgAzGgiGs6iE';
        const SHEET_API_URL = `https://docs.google.com/spreadsheets/d/${SHEET_ID}/export?format=csv&gid=0`;
        
        // Prague coordinates for distance calculation
        const PRAGUE_COORDS = { lat: 50.0755, lon: 14.4378 };

        // Colors for events
        const eventColors = [
            '#3498db', '#9b59b6', '#e74c3c', '#f39c12',
